<!DOCTYPE html>
<html>
  <head>
    <title>InASnap</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <li><%= link_to "Create a Photoshoot", new_user_photoshoot_path(current_user) %></li>
      <li><%= link_to "Locations", locations_path(current_user) %></li>
      <li><%= link_to "My Photoshoots", user_photoshoots_path(current_user) %></li>
      <li><%= link_to "Log Out", logout_path, method: "delete" %></li>
        <% else %>
          <li><%= link_to "Sign Up", signup_path %></li>
          <li><%= link_to "Log In", login_path %></li>
    <% end %>
    <%= yield %>
  </body>
</html>
